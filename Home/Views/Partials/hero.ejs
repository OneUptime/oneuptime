<style>
  /* Hero Product Card Glow Styles */
  .hero-card-wrapper {
      position: relative;
  }
  .hero-card-wrapper::before {
      content: '';
      position: absolute;
      inset: -30px;
      border-radius: 50%;
      opacity: 0;
      transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      pointer-events: none;
      z-index: 0;
  }
  .hero-card-wrapper:hover::before {
      opacity: 1;
  }
  .hero-card {
      position: relative;
      z-index: 1;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
