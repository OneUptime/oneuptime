        .about-card {
            transition: all 0.2s ease;
        }
        .about-card:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 20px -8px rgba(0, 0, 0, 0.1);
        }

        /* Contributor row hover */
        .contributor-row {
            transition: background-color 0.15s ease;
        }
        .contributor-row:hover {
            background-color: rgb(249 250 251);
        }
