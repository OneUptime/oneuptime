{
    "watch": [
        "./",
        "../Common/UI",
        "../Common/Types",
        "../Common/Utils",
        "../Common/Models"
    ],
    "ext": "ts,json,tsx,env,js,jsx,hbs",
    "ignore": [
        "./public/**",
        "./public/dist/**",
        "./build/*",
        "./build/**",
        "./build/dist/*",
        "./build/dist/**",
        "../Common/Server/**"
    ],
        "exec": "sh -c 'npm run dev-build && node esbuild.config.js --watch & npm run start'",
    "delay": "200ms",
    "legacyWatch": true
}